FROM node:18.13.0-alpine

WORKDIR /app

# Listening port
ARG PORT=3000
EXPOSE ${PORT}

# Credentials
ARG UNBODY_PROJECT_ID
ARG UNBODY_API_KEY
ARG SIMPLECAST_ACCESS_TOKEN
ARG REVALIDATE_WEBHOOK_TOKEN

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

COPY . .

RUN yarn install --production
RUN yarn build

CMD ["yarn", "start"]
